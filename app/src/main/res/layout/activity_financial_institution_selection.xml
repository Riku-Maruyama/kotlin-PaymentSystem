<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/financialInstituationSelection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="@string/fis_title"
        android:textSize="10sp" />

    <Button
        android:id="@+id/bt_financial_instituation_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/bt_financial_instituation_search" />

    <ListView
        android:id="@+id/trFinancialInstituationSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
